<Window x:Class="HomeLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HomeLibrary"
        Title="Home Library" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- For Logo -->
            <RowDefinition Height="*" />    <!-- For main content (list + details) -->
            <RowDefinition Height="Auto" /> <!-- For Add button and slider -->
        </Grid.RowDefinitions>

        <!-- Logo Placeholder -->
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Margin="10" Height="80" Width="150" HorizontalAlignment="Left">
            <TextBlock Text="LOGO" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="Gray"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="My Books" FontWeight="Bold" FontSize="18" Margin="10,0,0,5" />
                <!-- List of books - Changed to ListView with GridView for columns -->
                <ListView x:Name="BookList"
                          SelectionChanged="BookList_SelectionChanged"
                          Margin="10,0,10,0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                            <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                            <GridViewColumn Header="IsRead" DisplayMemberBinding="{Binding IsRead}" Width="70"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Add button -->
                <Button Content="Add" Click="AddBook_Click" Margin="10,10,10,0" HorizontalAlignment="Left" Width="70" />
            </StackPanel>

            <!-- Book Details Control -->
            <local:BookDetailsControl x:Name="BookDetails" Grid.Column="1" />
        </Grid>

        <!-- Slider for 'Adjust the darkness' -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
            <TextBlock Text="Adjust the darkness:" VerticalAlignment="Center" Margin="0,0,10,0" />
            <Slider x:Name="DarknessSlider"
                    Minimum="0" Maximum="100" Value="50"
                    Width="200"
                    VerticalAlignment="Center"
                    ValueChanged="DarknessSlider_ValueChanged" />
            <TextBox x:Name="DarknessValueTextBox"
                     Text="{Binding ElementName=DarknessSlider, Path=Value, StringFormat='Value {0:F0}'}"
                     IsReadOnly="True"
                     Width="80"
                     Margin="10,0,0,0"
                     VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>